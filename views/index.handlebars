<h1>Burgers</h1>

<h2>Current Menu</h2>

<ul>
	{{#each burgers}}
	{{#unless devoured}}
		<li>
		{{burger_name}}
		<button class="devour" data-id="{{this.id}}">Devour</button>
		</li>
	{{/unless}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create">
	<div class="form-group">
		<label for="burger">Burger Name:</label>
		<input type="text" id="burger" name="name">
	</div>
	<button type="submit">Add Burger</button>
</form>
